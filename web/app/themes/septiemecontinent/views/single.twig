{% extends "base.twig" %}

{% block page_header %}{% endblock %}

{% block content %}
	<article class="post-type-{{ post.post_type }}" id="post-{{ post.ID }}">
		<section class="article-content">
			<time class="pretitle" datetime="{{ post.date|date('Y-m-d H:i:s') }}">{{ post.date }}</time>
			<h1 class="article-h1">{{ post.title }}</h1>
			{{ get_attachment_image(post.thumbnail, '769x9999x0') }}
			<div class="article-body">
				{{post.content}}
			</div>
		</section>
	</article>
{% endblock %}